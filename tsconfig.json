{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "declarationDir": "./pkg",
    "outDir": "./pkg",
    "stripInternal": true
  },
  "include": ["src", "src/*.js"]
}
